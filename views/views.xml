<odoo>
  <data>
  
  <record model="ir.ui.view" id="socio_tree">
    <field name="name">Socios</field>
    <field name="model">coop1.socio</field>
    <field name="arch" type="xml">
      <tree>
        <field name="nombre"/>
        <field name="dni"/>
        <field name="fecha_nac"/>
        <field name="edad"/>
      </tree>
    </field>
  </record>
  
  <record model="ir.ui.view" id="socio_form">
    <field name="name">Socios</field>
    <field name="model">coop1.socio</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="nombre"/>
              <field name="dni"/>
              <field name="fecha_nac"/>
              <field name="edad"/>

            </group>
            <group>
              <field name="sexo"/>
              <field name="lugar_nacimiento"/>
            </group>
          
          </group>
          <notebook>
            <page string="Nacimiento">
              <group>
                <group>
                  <field name="estado_civil"/>
                </group>
              </group>

            </page>
          </notebook>
          
        </sheet>
      </form>
    </field>
  </record>
  
